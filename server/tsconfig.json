{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "*.js"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/vitest"],
    "types": [],
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "src/types/vitest.d.ts"
  ],
  "exclude": ["node_modules"]
}
